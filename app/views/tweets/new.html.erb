<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "ニックネーム" %>
      <%= form.file_field :image %>
      <%= form.text_field :title, placeholder: "タイトル" %>
      <%= form.text_area :recipe,placeholder: "レシピ" %>
      <%= form.text_area :text, placeholder: "補足", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>