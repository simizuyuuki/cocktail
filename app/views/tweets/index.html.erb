<%= form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row">
  <% @tweets.each do |tweet| %>
     <div class="content_post" style="background-image: url(<%= url_for(tweet.image) if tweet.image.attached? %>);">
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '詳細', tweet_path(tweet.id) %>
          </li>
          <% if user_signed_in? && current_user.id == tweet.user_id %>
          <li>
            <%= link_to '編集', edit_tweet_path(tweet.id) %>
          </li>
          <li>
            <%= link_to '削除', tweet_path(tweet.id), data: { turbo_method: :delete } %>
          </li>
           <% end %>
        </ul>
      </div>
      <p><%= tweet.text %></p>
      <span class="name">
        <%= tweet.name %>
      
          <span>投稿者</span><%= tweet.user.nickname %>
      </span>
        <div id="like-btn<%= tweet.id %>">
    <% if user_signed_in? && tweet.liked_by?(current_user)%>
      <%=link_to "いいね済", tweet_likes_path(tweet.id),  data: { turbo_method: :delete }, class: "tweet_likes" %>
    <% else %>
      <%=link_to "いいねする", tweet_likes_path(tweet.id), data: { turbo_method: :post }, class: "tweet_likes" %>
    <% end %>
  </div>
    </div>
  <% end %>
</div>